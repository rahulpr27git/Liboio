<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPlatforms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="0K"
                    android:shadowColor="@color/primaryTextColor"
                    android:shadowRadius="1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:textColor="@color/lightPrimaryColor"
                    android:background="@color/secondaryTextColor"
                    app:fontFamily="@font/lato_bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_projects"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:textColor="@color/lightPrimaryColor"
                    android:background="@color/primaryTextColor"
                    app:fontFamily="@font/lato_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    app:fontFamily="@font/lato_bold"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/lato_bold"
                    android:layout_marginTop="5dp"
                    android:text="@string/default_language"
                    android:textColor="@color/primaryTextColor"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvDefaultLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/lato_bold"
                    android:text="Go"
                    android:textColor="@color/secondaryTextColor"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/bar"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvUrl"
                        android:background="@color/primaryTextColor"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="link"
                        android:layout_toRightOf="@id/bar"
                        app:fontFamily="@font/lato_bold"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>