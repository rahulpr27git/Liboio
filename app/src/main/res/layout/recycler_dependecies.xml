<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tvDeprecated"
                app:fontFamily="@font/lato_bold"
                android:text="@string/label_project_name"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPlatform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvName"
                app:fontFamily="@font/lato"
                android:textColor="@color/lightPrimaryColor"
                android:background="@drawable/drawable_keyword_background"
                android:text="@string/label_project_name"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDeprecated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/lato_bold"
                android:textSize="10sp"
                android:text="@string/label_deprecated"
                android:layout_alignParentRight="true"
                android:background="@color/secondaryTextColor"
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvOutdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/lato_bold"
                android:textSize="10sp"
                android:text="@string/label_outdated"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvDeprecated"
                android:layout_marginTop="1dp"
                android:background="@color/secondaryTextColor"
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvKindAndVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="version"
                android:layout_below="@+id/tvPlatform"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>